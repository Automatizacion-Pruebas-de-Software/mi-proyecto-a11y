{
  "name": "mi-proyecto-a11y",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --port 5173",
    "serve": "serve dist -l 5173 --no-port-switching",
    "test:a11y": "axe",
    "test:a11y:dev": "npm run build && npm run serve & SERVER_PID=$! && npx wait-on http://localhost:5173 --timeout 60000 && npx --no-install axe && kill $SERVER_PID || kill $SERVER_PID"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.11.0",
    "serve": "^14.2.5",
    "vite": "npm:rolldown-vite@7.2.2",
    "wait-on": "^9.0.3"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.2"
  }
}
